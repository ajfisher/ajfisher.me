<li>
	{{#if listimage}}
		<div>
			<a href="/{{this.path}}">
				<img src="{{listimage}}"/>
			</a>
		</div>
	{{/if}}
    <p class="date">{{ moment date 'dddd, MMMM Do YYYY' }}</p>
	<h2><a href="/{{this.path}}">{{this.title}}</a></h2>
    {{#if excerpt}}
        <p>{{excerpt}}</p>
    {{/if}}
    <p>
        <span class="readingtime">{{this.readingtime}} minute read</span>
        <span class="wordcount">({{humanise this.wordcount}} words)</span>
    </p>
</li>
